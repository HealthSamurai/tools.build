{:paths ["src/main/clojure" "src/main/resources"]

 :deps
 {org.clojure/clojure {:mvn/version "1.10.1"}
  org.clojure/tools.deps.alpha {:mvn/version "0.9.799"}
  ;org.clojure/tools.deps.alpha {:git/url "https://github.com/clojure/tools.deps.alpha.git" :sha "6bd58578605212ce2ffec4ad666492d76ff8ef65"}
  org.clojure/tools.namespace {:mvn/version "1.0.0"}

  ;; speculative s3 deployment task
  ;com.cognitect.aws/api {:mvn/version "0.8.408"}
  ;com.cognitect.aws/endpoints {:mvn/version "1.1.11.705"}
  ;com.cognitect.aws/s3 {:mvn/version "784.2.593.0"}
  }

 :aliases
 {:clj-paths ["src/main/clojure"]
  :java-paths ["java"]
  :resource-paths ["src/main/resources"]

  :dev
  {:extra-paths ["classes"]}

  :build-without-run
  {:extra-deps {org.slf4j/slf4j-nop {:mvn/version "1.7.25"}}
   :main-opts ["-m" "clojure.tools.deps.alpha.run" "-Xclojure.tools.build/build" ":build"]}

  :build
  {:replace-deps {org.clojure/tools.build {:mvn/version "0.1.0-SNAPSHOT"}} ;org.slf4j/slf4j-nop {:mvn/version "1.7.25"}}
   :exec-fn clojure.tools.build/build
   :exec-args :build-params}

  :build-params
  {:output-dir "out1"
   :tasks [[dirs] [clean] [sync-pom] [copy] [jar] [install]]
   :params {:build/copy-specs [{:from :clj-paths}]
            ;:build/src-pom "pom.xml"
            :build/lib my/lib1
            :build/version "1.2.3"}}
  }}
